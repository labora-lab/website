---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../../consts';
import { t } from '../../../i18n/translations';
import type { Lang } from '../../../i18n/translations';

export function getStaticPaths() {
	return [{ params: { lang: 'pt' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params as { lang: Lang };

if (lang !== 'pt' && lang !== 'en') {
	return Astro.redirect('/pt/blog');
}

const allPosts = await getCollection('blog');

const posts = allPosts
	.filter((post) => post.data.lang === lang)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const pageTitle = t(lang, 'nav.blog');
const title = `${pageTitle} - ${SITE_TITLE[lang]}`;
const description = lang === 'pt' ? 'Blog do LABORA' : 'LABORA Blog';
---

<BaseLayout title={title} description={description} lang={lang}>
	<!-- Header Section -->
	<div class="bg-linear-to-r from-blue-600 to-blue-800 text-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
			<div class="text-center">
				<h1 class="text-4xl sm:text-5xl font-bold mb-4">{pageTitle}</h1>
				<p class="text-xl text-blue-100">
					{
						lang === 'pt'
							? 'Pesquisas, descobertas e novidades do laborat√≥rio'
							: 'Research, findings and lab news'
					}
				</p>
			</div>
		</div>
	</div>

	<!-- Posts Section -->
	<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		{
			posts.length === 0 ? (
				<div class="text-center py-16">
					<svg
						class="w-24 h-24 mx-auto text-gray-300 mb-4"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
						/>
					</svg>
					<p class="text-xl text-gray-500">{t(lang, 'blog.noPosts')}</p>
				</div>
			) : (
				<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
					{posts.map((post) => {
						const slug = post.id.replace(/^(pt|en)\//, '');
						return (
							<article class="group bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
								<a href={`/${lang}/blog/${slug}/`} class="block">
									{post.data.heroImage && (
										<div class="aspect-video overflow-hidden bg-gray-200">
											<img
												src={post.data.heroImage.src}
												alt={post.data.title}
												class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
											/>
										</div>
									)}
									<div class="p-6">
										<div class="flex items-center gap-2 text-sm text-gray-500 mb-3">
											<svg
												class="w-4 h-4"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
												/>
											</svg>
											<FormattedDate date={post.data.pubDate} lang={lang} />
										</div>
										<h2 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
											{post.data.title}
										</h2>
										<p class="text-gray-600 line-clamp-3">{post.data.description}</p>
										<div class="mt-4 flex items-center text-blue-600 font-semibold">
											<span>{lang === 'pt' ? 'Ler mais' : 'Read more'}</span>
											<svg
												class="w-5 h-5 ml-1 group-hover:translate-x-1 transition-transform"
												fill="none"
												stroke="currentColor"
												viewBox="0 0 24 24"
											>
												<path
													stroke-linecap="round"
													stroke-linejoin="round"
													stroke-width="2"
													d="M9 5l7 7-7 7"
												/>
											</svg>
										</div>
									</div>
								</a>
							</article>
						);
					})}
				</div>
			)
		}
	</section>
</BaseLayout>

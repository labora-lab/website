---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { t } from '../../i18n/translations';
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Lang } from '../../i18n/translations';

export function getStaticPaths() {
	return [{ params: { lang: 'pt' } }, { params: { lang: 'en' } }];
}

const { lang } = Astro.params as { lang: Lang };

if (lang !== 'pt' && lang !== 'en') {
	return Astro.redirect('/pt');
}

const title = SITE_TITLE[lang];
const description = SITE_DESCRIPTION[lang];
---

<BaseLayout title={title} description={description} lang={lang}>
	<!-- Hero Section -->
	<section class="bg-linear-to-r from-blue-600 to-blue-800 text-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-32">
			<div class="text-center">
				<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
					{title}
				</h1>
				<p class="text-xl sm:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto">
					{description}
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href={getRelativeLocaleUrl(lang, 'about')}
						class="px-8 py-3 bg-white text-blue-600 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
					>
						{lang === 'pt' ? 'Saiba Mais' : 'Learn More'}
					</a>
					<a
						href={getRelativeLocaleUrl(lang, 'blog')}
						class="px-8 py-3 bg-blue-700 text-white rounded-lg font-semibold hover:bg-blue-600 transition-colors border-2 border-blue-500"
					>
						{t(lang, 'nav.blog')}
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="py-16 sm:py-24">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<h2 class="text-3xl sm:text-4xl font-bold text-center text-gray-900 mb-12">
				{lang === 'pt' ? 'Áreas de Pesquisa' : 'Research Areas'}
			</h2>
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				<!-- Feature 1 -->
				<div class="text-center">
					<div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">
						{lang === 'pt' ? 'Inteligência Artificial' : 'Artificial Intelligence'}
					</h3>
					<p class="text-gray-600">
						{lang === 'pt' ? 'Aplicada à Saúde Pública' : 'Applied to Public Health'}
					</p>
				</div>

				<!-- Feature 2 -->
				<div class="text-center">
					<div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">
						{lang === 'pt' ? 'Biomodelagem' : 'Biomodeling'}
					</h3>
					<p class="text-gray-600">
						{lang === 'pt' ? 'Modelagem Matemática de Doenças' : 'Mathematical Disease Modeling'}
					</p>
				</div>

				<!-- Feature 3 -->
				<div class="text-center">
					<div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">
						{lang === 'pt' ? 'Análise de Dados' : 'Data Analysis'}
					</h3>
					<p class="text-gray-600">
						{lang === 'pt' ? 'Dados Epidemiológicos' : 'Epidemiological Data'}
					</p>
				</div>

				<!-- Feature 4 -->
				<div class="text-center">
					<div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">
						{lang === 'pt' ? 'Vigilância em Saúde' : 'Health Surveillance'}
					</h3>
					<p class="text-gray-600">
						{lang === 'pt' ? 'Sistemas de Monitoramento' : 'Monitoring Systems'}
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="bg-gray-50 py-16">
		<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl font-bold text-gray-900 mb-4">
				{lang === 'pt' ? 'Ficou interessado?' : 'Interested?'}
			</h2>
			<p class="text-xl text-gray-600 mb-8">
				{
					lang === 'pt'
						? 'Saiba mais sobre nossas pesquisas e publicações.'
						: 'Learn more about our research and publications.'
				}
			</p>
			<a
				href={getRelativeLocaleUrl(lang, 'about')}
				class="inline-block px-8 py-3 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 transition-colors"
			>
				{lang === 'pt' ? 'Conheça o LABORA' : 'About LABORA'}
			</a>
		</div>
	</section>
</BaseLayout>

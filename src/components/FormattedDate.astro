---
import type { Lang } from '../i18n/translations';

interface Props {
	date: Date;
	lang: Lang;
}

const { date, lang } = Astro.props;
const locale = lang === 'pt' ? 'pt-BR' : 'en-US';
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { Lang } from '../i18n/translations';

interface Props {
	title: string;
	description: string;
	lang: Lang;
	image?: any;
}

const { title, description, lang, image } = Astro.props;
---

<!doctype html>
<html lang={lang} class="scroll-smooth h-full">
	<head>
		<BaseHead title={title} description={description} lang={lang} image={image} />
	</head>
	<body class="h-full flex flex-col bg-linear-to-b from-gray-50 to-white">
		<Header lang={lang} />

		<main class="flex-1">
			<slot />
		</main>

		<Footer lang={lang} />
	</body>
</html>
